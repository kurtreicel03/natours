header.header
    nav.nav.nav--tours 
        a.nav__el(href='/') All tours
        if path === 'tours'
            form.nav__search
                button.nav__search-btn 
                    svg
                        use(xlink:href='../../img/icons.svg#icon-search')
                input.nav__search-input(type='text' placeholder='Search tours')

    .header__logo
        img(src='../../img/logo-white.png', alt='Natours Logo')
    nav.nav.nav--user
        if user
            a.nav__el(href="/me")
                img.nav__user-img(src=`../../img/users/${user.photo}`, alt="User Photo")
                span=user.name.split(' ')[0]
            a.nav__el.nav__el--logout Log Out
        else
            a(href='/login' class=`nav__el ${path === 'login' ? 'nav__el--cta' : ''}`) Log in
            a(href='/signup' class=`nav__el ${path !== 'login' ? 'nav__el--cta' : ''}`) Sign Up